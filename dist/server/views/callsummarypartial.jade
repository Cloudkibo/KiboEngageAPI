.page-content-wrapper
  .page-content
      div(class='white-content price-content')
         center
            h3 Live Help Call Summary
         div
           .form-group
               label Issue Summary
               .input-group
                 textarea.form-control(rows=4, cols=75, type='text', placeholder='', ng-model='data.summary', name='question', required, ng-focus)
           .form-group
               label Issues Description
               .input-group
                 textarea.form-control(rows=4, cols=75, type='text', placeholder='', ng-model='data.description', name='question', required, ng-focus)
           .form-group
               label Issue Resolution
               .input-group
                 textarea.form-control(rows=4, cols=75, type='text', placeholder='', ng-model='data.resolution', name='question', required, ng-focus)

               br
               button.btn.green-meadow(ng-click='saveCallSummary(data)') Save
